          "type": "boolean",
          "example": true
        },
        "personAccountId": {
          "type": "string",
          "example": "0010r00000Jy7NaAAJ"
        },
        "otpDeliveryInfo": {
          "$ref": "#/definitions/OtpDeliveryInfo"
        },
        "person": {
